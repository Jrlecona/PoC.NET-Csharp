@page "{id:int}"
@model UI.Pages.Users.ChangePasswordModel

<h1>Change Password</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="PasswordModel.NewPassword"></label>
        <input asp-for="PasswordModel.NewPassword" type="password" class="form-control" />
        <span asp-validation-for="PasswordModel.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordModel.ConfirmPassword"></label>
        <input asp-for="PasswordModel.ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="PasswordModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}